{
    "parser" : "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env" : {
        "node" : true,
        "browser": true,
        "jest": true,
        "es6" : true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "no-console": "warn"
    },
    "settings" : {
        "react" : {
            "version" : "16.5.0"
        }
    },
    "plugins" : [
        "react",
        "jest"
    ]
}